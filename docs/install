mkdir -pv deployment/log

[psql server]
sudo apt-get install postgresql-9.3
/etc/postgresql/9.3/main/pg_hba.conf:
	host    all             all             0.0.0.0/0               md5
/etc/postgresql/9.3/main/postgresql.conf
	listen_addresses = '*'
